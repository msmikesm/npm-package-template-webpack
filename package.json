{
    "name": "npm-package-template-webpack",
    "version": "1.0.0",
    "description": "template for npm package - webpack",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "test": "jest --config jest.json",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write \"src/**/*.ts\"",
        "dev": "webpack --config webpack.dev.js",
        "build": "webpack --config webpack.prod.js",
        "prepare": "npm run dev && npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/msmikesm/npm-package-template-webpack.git"
    },
    "keywords": [
        "template",
        "webpack",
        "npm",
        "package"
    ],
    "author": "Michal S.",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/msmikesm/npm-package-template-webpack/issues"
    },
    "homepage": "https://github.com/msmikesm/npm-package-template-webpack#readme",
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.7.7",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-proposal-numeric-separator": "^7.7.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
        "@babel/preset-env": "^7.7.7",
        "@types/jest": "^24.0.25",
        "@typescript-eslint/eslint-plugin": "^2.14.0",
        "@typescript-eslint/parser": "^2.14.0",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.9.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-json": "^2.0.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0",
        "jest": "^24.9.0",
        "prettier": "^1.19.1",
        "ts-jest": "^24.2.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.4",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.12"
    }
}
